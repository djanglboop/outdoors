<div class="place_form_wrap">

<h1 style="margin: 17% auto 10%">Sign up</h1>

<%= form_for @user do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this place from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, class: "form_area", placeholder: "Enter username", autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form_area", placeholder: "Enter email", autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form_area", placeholder: "Enter password" %>
  </div>

  <div class="actions">
    <%= form.submit "Sign up", class: "place_submit_btn" %>
  </div>

<% end %>

<div class="nav_place_btn">
<%= link_to 'Back', root_path %>
</div>

</div>